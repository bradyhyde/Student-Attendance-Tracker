@model StudentAttendanceTracker.Models.CourseViewModel
@{
    ViewBag.Title = "AddStudents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Students</h2>
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.CourseName)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.CourseName)
    </dd>
</dl>
<div>
    <hr />
    <div class="row">
        <div class="col-md-offset-1 col-md-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <form class="form-inline">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.CourseID)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Students)
                            @Html.DropDownList("StudentSelect", "--Select a Student--")
                            @Html.ValidationMessageFor(model => model.Students)
                            
                                <button type="submit" class="btn btn-primary">Save</button>
                            
                        </div>
                    </form>
                }
        </div>
        <div class="col-md-offset-1 col-md-4">
            <table class="table table-bordered">
                <tr>
                    <th class="text-center" colspan="2">
                        @Html.DisplayNameFor(model => model.Students)
                    </th>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Students[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Students[0].LastName)
                    </th>
                </tr>
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


